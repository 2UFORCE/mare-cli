{
  "version": 2,
  "builds": [
    {
      "src": "src/api/generateLesson.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/generateLesson",
      "methods": ["POST"],
      "dest": "src/api/generateLesson.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}